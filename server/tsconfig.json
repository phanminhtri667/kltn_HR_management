{
  "compilerOptions": {
   
    "target": "es6",                          
    "module": "commonjs",                     
    
    "allowJs": true,                      
    "outDir": "./dist", 
    "rootDir": "./src",                       
    "strict": true,                           
    "moduleResolution": "node",           
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "esModuleInterop": true,                  
    
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true 
  },
  "exclude": ["node_modules"]
}
